pipeline {
    agent any
    environment {

      
      imagename = "024692250340.dkr.ecr.ap-south-1.amazonaws.com/hello-world"
      registryCredential = 'aws-credmain'
      dockerImage = 'hello'

 } 
    options {
        skipStagesAfterUnstable()
    }
    stages {
         stage('Clone repository') { 
            steps {
                // Get some code from a GitHub repository
               git branch: 'master',
               url: 'https://github.com/kosurumuniraja/madam.git'
            }
            }
        

        stage('Building image') {
         steps{
           script {
              dockerImage = docker.build imagename
       }
     }
  }
       
        stage('Deploy Image') {
            steps{
            script {
              docker.withRegistry('https://024692250340.dkr.ecr.ap-south-1.amazonaws.com/hello-world:aws-credmain')  {
               dockerImage.push("$BUILD_NUMBER")
               dockerImage.push('latest')
        }
       }
      }
   }
    }
}
